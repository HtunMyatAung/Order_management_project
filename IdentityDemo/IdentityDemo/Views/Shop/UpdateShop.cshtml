@model IdentityDemo.Models.ShopModel
@{
    Layout = "_OwnerLayout";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<div class="container" style="padding-top: 60px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Shop Update</h2>
                </div>
                <div class="card-body">
                    

                    <!-- Form for updating shop details -->
                    <form asp-action="UpdateShop" asp-controller="Shop" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ShopId" />

                        <div class="form-group row">
                            <label for="profileImage" class="col-sm-2 col-form-label">Shop Profile</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control-file" id="profileImage" name="profileImage">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShopName">Name</label>
                            <input type="text" class="form-control" asp-for="ShopName" placeholder="Enter name">
                            <span asp-validation-for="ShopName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShopPhone">Phone</label>
                            <input type="text" class="form-control" asp-for="ShopPhone" placeholder="Enter Phone">
                            <span asp-validation-for="ShopPhone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShopEmail">Email</label>
                            <input type="text" class="form-control" asp-for="ShopEmail" placeholder="Enter Email">
                            <span asp-validation-for="ShopEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShopAddress">Address</label>
                            <input type="text" class="form-control" asp-for="ShopAddress" placeholder="Enter address">
                            <span asp-validation-for="ShopAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShopDescription">Description</label>
                            <input type="text" class="form-control" asp-for="ShopDescription" placeholder="Enter description">
                            <span asp-validation-for="ShopDescription" class="text-danger"></span>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("Owner_Index", "Shop")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="../../js/Updateshopvalidate.js"></script>
<script>
    document.getElementById('phoneInput').addEventListener('input', function () {
        this.value = this.value.replace(/[^0-9]/g, ''); // Replace any non-numeric characters with an empty string
    });
</script>