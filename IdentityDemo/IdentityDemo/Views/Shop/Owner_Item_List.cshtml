@model IEnumerable<IdentityDemo.Models.ItemModel>

@{
    Layout = "_Owner_layout";
    ViewData["Title"] = "Home Page";
    int counter = 1;
}

@section Database {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/fh-4.0.1/sb-1.7.1/datatables.min.css" rel="stylesheet">
    <style>
        .dataTables_filter {
            float: left !important;
        }

    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/fh-4.0.1/sb-1.7.1/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#shoptable').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                },
                dom: '<"d-flex justify-content-between"f>rt<"bottom"p><"clear">'
            });
        });

        function openPopup(itemName, itemPrice, itemQuantity, createdDate, updatedDate, itemImageName) {
            // Set the text content of the modal
            $('#modalItemName').text(itemName);
            $('#modalItemPrice').text(itemPrice);
            $('#modalItemQuantity').text(itemQuantity);
            $('#modalCreatedDate').text(new Date(createdDate).toLocaleString());
            $('#modalUpdatedDate').text(new Date(updatedDate).toLocaleString());

            // Set the image source
            $('#modalImage').attr('src', '/img/items/' + itemImageName);

            // Show the modal
            $('#popup').modal('show');
        }
        function closePopup() {
            $('#popup').modal('hide');
        }

        
    </script>
}
<div class="d-flex justify-content-between ">
    <h1 style="color: black">Product</h1>
    @foreach (var item in Model)
    {
        ViewBag.id = item.Shop_Id;
    }
    <div class="my-auto">
        <a href="@Url.Action("CreateItem","Item",new{shopid = @ViewBag.id})" class="btn btn-primary"><i class="fa fa-circle-plus"></i> New Item</a>
    </div>
</div>



<table id="shoptable" class="display" style="width:100%;">
    <thead>
        <tr style="text-align: center;">
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Discount Price</th>
            <th>Edit</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td style="text-align:center;">@counter</td>
                <td style="text-align:center;">@item.ItemName</td>
                <td style="text-align:center;">@item.ItemPrice</td>
                <td style="text-align:center;">@item.ItemQuantity</td>
                <td style="text-align:center;">@item.ItemChangedPrice</td>
                <td style="text-align:center;">
                    <a href="@Url.Action("UpdateItem", "Item", new { itemid = @item.ItemId })">
                        <i class="fas fa-edit sm pr-1"></i> Edit
                    </a>
                </td>
                <td style="text-align:center;">
                    <a onclick="openPopup('@item.ItemName', '@item.ItemPrice', '@item.ItemQuantity', '@item.ItemCreatedDate', '@item.ItemUpdatedDate','@item.ItemImageName')" href="#">
                        <i class="fas fa-eye pr-1"></i> View
                    </a>
                </td>
                <td style="text-align:center;">
                    <form asp-action="DeleteItem" asp-controller="Item" method="post" onsubmit="return confirm('Are you sure you want to delete this Item?');">
                        <input type="hidden" name="itemid" value="@item.ItemId" />
                        <button type="submit" class="btn btn-link" style="color:red">
                            <i class="fas fa-trash sm pr-1"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
            counter += 1;
        }
    </tbody>
</table>
<!-- Bootstrap Modal -->
<div class="modal fade" id="popup" tabindex="-1" role="dialog" aria-labelledby="buyItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buyItemModalLabel">Item Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="modalImage" src="" alt="Item Image" style="max-width: 100%; max-height: 200px;" />
                <p><strong>Item Name:</strong> <span id="modalItemName"></span></p>
                <p><strong>Price:</strong> <span id="modalItemPrice"></span></p>
                <p><strong>Quantity:</strong> <span id="modalItemQuantity"></span></p>
                <p><strong>Created Date:</strong> <span id="modalCreatedDate"></span></p>
                <p><strong>Updated Date:</strong> <span id="modalUpdatedDate"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>


