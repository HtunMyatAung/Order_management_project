@model IEnumerable<IdentityDemo.ViewModels.OrderViewModel>
@{
    Layout = "_Owner_layout";
    int counter=1;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
@section Database {
    <link href="~/css/download_css/sb_1_7_1_datatables.min.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
    <script src="~/js/download_js/sb_1_7_1_datatables.min.js"></script>
}
@section Scripts {
    
    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#ordertable').DataTable();
        });
    </script>
}
<div style="padding-top: 15px;">
    <h1 class="">Order List</h1>
    <div class="card-body">
        <table id="ordertable" class="table table-bordered table-striped">
            <thead class="bg-gray">

                <tr style="text-align: center;">
                    <th>Id</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Customer Id</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var order in Model)
                {
                    <tr style="text-align: center;">

                        <td>@counter</td>
                        <td>@order.OrderDate</td>
                        <td>@order.OrderPrice</td>
                        <td>@order.User_Name</td>
                        <td>
                            <form asp-action="DeleteOrder" asp-controller="Order" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                <input type="hidden" name="orderid" value="@order.OrderID" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash sm pr-1"></i> Delete
                                </button>
                            </form>
                        </td>

                    </tr>
                    counter += 1;
                }

            </tbody>
        </table>
    </div>
</div>

