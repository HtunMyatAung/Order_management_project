@model IdentityDemo.ViewModels.CategoryListViewModel
@{
    Layout = "_Admin_layout";
    int counter = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <style>
        .github-login-form {
            margin-top: 50px;
            padding: 30px;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            background-color: #fff;
        }

        .github-label {
            font-weight: 600;
            color: #24292e;
        }

        .github-input {
            margin-bottom: 16px;
            padding: 6px 8px;
            font-size: 14px;
            line-height: 20px;
            color: #24292e;
            background-color: #fafbfc;
            border: 1px solid #e1e4e8;
            border-radius: 6px;
            box-shadow: inset 0 1px 2px rgba(27, 31, 35, 0.075);
        }

            .github-input:focus {
                border-color: #0366d6;
                box-shadow: 0 0 0 3px rgba(3, 102, 214, 0.3);
                outline: none;
            }

        .github-btn {
            padding: 10px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #fff;
            background-color: #28a745;
            border-color: rgba(27, 31, 35, 0.15);
            border-radius: 6px;
        }

            .github-btn:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .text-danger {
            margin-top: 5px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <form method="post" asp-action="Admin_add_category" asp-controller="AdminControl">
        <div class="d-flex justify-content-between">
            <h3>Category List</h3>
            <div class="d-flex flex-row-reverse">
                <div class="p-2">
                    <input id="category_name" name="category_name" type="text" required/>
                </div>
                <div class="p-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus fa-sm"></i> Add</button>
                </div>
            </div>
        </div>
        
    </form>
    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <table id="shoptable" class="display" style="width:100%">
            <thead>
                <tr style="text-align: center;">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Items Count</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.List)
                {
                    <tr style="text-align: center;">
                        <td>@counter</td>
                        <td>@category.Name</td>
                        <td>@category.Item_count</td>
                        <td><button>Delete</button></td>

                    </tr>
                    counter += 1;
                    <!-- Add more rows with data as needed -->
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#shoptable').DataTable();
        });
    </script>
</body>
</html>

