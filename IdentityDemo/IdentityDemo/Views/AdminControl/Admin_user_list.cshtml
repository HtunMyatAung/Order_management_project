
@model IEnumerable<IdentityDemo.Models.ApplicationUser>
@{
    Layout = "_Admin_layout";
    int counter = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sample Table</title>
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/download_css/1_10_24_jquery.dataTables.min.css" />
    <style>
        /* Optional CSS for custom styling */
        
    </style>
</head>
<body>
    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <table id="shoptable" class="display" style="width:100%">
            <thead>
                <tr style="text-align: center;">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Action</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr style="text-align: center;">
                        <td>@counter</td>
                        <td>@user.UserName</td>
                        <td>@user.PhoneNumber</td>
                        <td style="color:@(user.Role == "User" ? "green" : user.Role == "Owner" ? "red" : "black");">
                            <span style="background-color: lightgray; padding: 2px; border-radius: 4px; display: inline-block;">
                                @user.Role
                            </span>
                            
                        </td>

                        <td>@user.Email</td>
                        <td>@user.Address</td>
                        <td>
                            <a href="@Url.Action("Admin_update_user_info", "AdminControl", new { userId = user.Id })" class="btn btn-link">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-controller="AdminControl" asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-link" style="color:red">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </td>
                        
                    </tr>
                    counter += 1;
                    <!-- Add more rows with data as needed -->
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="~/js/download_js/1_10_24_jquery.dataTables.min.js"></script>
    <script>
        // Initialize DataTable
        $(document).ready(function () {
            $('#shoptable').DataTable();
        });
    </script>
</body>
</html>
