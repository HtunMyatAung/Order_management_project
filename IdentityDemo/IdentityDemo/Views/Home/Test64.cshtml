    <script>
        // Select all elements with class "card"
        const cards = document.querySelectorAll('.card');

        // Loop through each card and add event listeners
        cards.forEach(card => {
            // Event listener for when mouse enters (hover)
            card.addEventListener('mouseenter', function () {
                // Create the content to be added
                const detailsContent = `
                        <div class="get-details">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title get-button">Quantity:</h5>
                                <p class="card-text get-button">10</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title get-button">Discount:</h5>
                                <p class="card-text get-button">20mmk</p>
                            </div>
                        </div>
                    `;

                // Append the content to the card-body
                card.querySelector('.card-body').insertAdjacentHTML('beforeend', detailsContent);
                card.querySelector('.img-box').style.height = '280px';
                card.querySelector('.card-body').style.height = '120px';
            });

            // Event listener for when mouse leaves (hover out)
            card.addEventListener('mouseleave', function () {
                // Remove the added content when mouse leaves
                const getDetails = card.querySelector('.get-details');
                if (getDetails) {
                    getDetails.remove();
                    card.querySelector('.img-box').style.height = '320px';
                    card.querySelector('.card-body').style.height = '80px';
                }

            });
        });
    </script>

