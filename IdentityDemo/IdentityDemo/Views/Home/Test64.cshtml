    <style>
        .item-container {
            position: relative;
            width: 200px;
            text-align: center;
            margin: 20px;
            border: 1px solid #ddd;
            padding: 10px;
            transition: transform 0.2s;
        }

            .item-container:hover {
                transform: scale(1.15);
            }

            .item-container img {
                max-width: 100%;
                max-height: 150px;
            }

        .item-details {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.9);
            padding: 10px;
            box-sizing: border-box;
            z-index: 10;
            text-align: left;
        }

        .item-container:hover .item-details {
            display: block;
        }

        .normal-details {
            display: block;
        }

        .item-container:hover .normal-details {
            display: none;
        }
    </style>
</head>
