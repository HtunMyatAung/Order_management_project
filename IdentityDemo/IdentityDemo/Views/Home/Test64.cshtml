@{
    Layout = "_Zone_layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Upload and Preview</title>
    <style>
        /* Optional: CSS for styling the image preview */
        img {
            max-width: 100%;
            max-height: 200px;
            border: 1px solid #ccc;
            padding: 5px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <form runat="server">
        <input accept="image/*" type="file" id="imgInp" onchange="previewImage(event)" />
        <img id="blah" src="#" alt="Preview Image" />
    </form>

    <script>
        function previewImage(event) {
            const imgInp = event.target;
            const file = imgInp.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('blah').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
