@model IEnumerable<IdentityDemo.Models.OrderModel>
@{
    Layout = "_OwnerLayout";
}
@section Database {
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/fh-4.0.1/sb-1.7.1/datatables.min.css" rel="stylesheet">
}
@section Scripts {
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/fh-4.0.1/sb-1.7.1/datatables.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#example1').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                }
            });
        });
    </script>
}
<div style="padding-top: 15px;">
    <h1 class="">Order List</h1>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead class="bg-gray">

                <tr style="text-align: center;">
                    <th>Id</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Customer Id</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr style="text-align: center;">

                        <td>@item.OrderID</td>
                        <td>@item.OrderDate</td>
                        <td>@item.OrderPrice</td>
                        <td>@item.User_Id</td>
                        <td>
                            <form asp-action="DeleteOrder" asp-controller="Order" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                <input type="hidden" name="orderid" value="@item.OrderID" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash sm pr-1"></i> Delete
                                </button>
                            </form>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

