@model IdentityDemo.ViewModels.InvoiceViewModel

@{
    Layout = null;
    decimal total=0;
    decimal taxrate = 0.1m;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        
        /* Custom styles */
        .modal-footer {
            justify-content: flex-end; /* Align buttons to the right */
        }

        /* Style the buttons */
        .modal-footer button {
            font-size: 18px; /* Increase font size */
            padding: 10px 20px; /* Add padding to make buttons bigger */
        }

            /* Style the Cancel button in red */
            .modal-footer button.cancel-button {
                color: red;
            }
    
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .invoice-header, .invoice-footer {
            margin-bottom: 20px;
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

        .invoice-details, .client-details, .items, .summary, .notes {
            margin-bottom: 20px;
        }

            .items table {
                width: 100%;
                border-collapse: collapse;
            }

            .items th, .items td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align:center;
            }

        .summary {
            text-align: right;
        }

            .summary table {
                width: 50%;
                float: right;
            }

            .summary th, .summary td {
                padding: 8px;
            }
            
    </style>
</head>
<body>
    <div class="invoice-header">
        <div>
            <h1>@Model.Shop.ShopName</h1>
            <p>Address :@Model.Shop.ShopAddress<br>Contact Details:@Model.Shop.ShopEmail</p>
        </div>
        <div>
            <h2>Invoice</h2>
            <p>Invoice Number: @Model.OrderId<br>Invoice Date: @Model.OrderDate<br>
                @*Due Date: MM/DD/YYYY*@
                </p>
        </div>
    </div>
    <div class="client-details">
        <h3>Bill To:</h3>
        <p>Client Name:@Model.User.UserName<br>Client Address:@Model.User.Address<br>Client Contact Details:@Model.User.PhoneNumber</p>
    </div>
    <div class="items">
        <table>
            <thead>
                <tr>
                    <th>Item Description</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>       
                @foreach(var item in Model.Items){
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.ItemQuantity</td>
                        <td>@item.ItemPrice</td>
                        <td>@(item.ItemQuantity * item.ItemPrice)</td>
                    </tr>
                    total +=(item.ItemQuantity * item.ItemPrice);
                }  
            </tbody>
        </table>
    </div>
    <div class="summary">
        <table>
            <tr>
                <th>Subtotal:</th>
                <td>@total</td>
            </tr>
            <tr>
                <th>Taxes (10%):</th>
                <td>@(total*taxrate)</td>
            </tr>
            <tr>
                <th>Total Amount Due:</th>
                <td>@(total+(total*taxrate))</td>
            </tr>
        </table>
    </div>
    <div class="notes">
        <h3>Notes:</h3>
        <p>Thank you for your business!<br>If you have any questions, please contact us at uabzone@gmail.com</p>
    </div>
    <div class="invoice-footer">
        <p>Payment Methods: Bank Transfer (Account Number: XXXXX, SWIFT: XXXXX), PayPal (@Model.Shop.ShopEmail)<br>Payment Terms: Net 30 days</p>
    </div>
    <div class="modal-footer">
        <a href ="@Url.Action("HomePageItems", "Item")">
            <button type="button" class="btn btn-secondary cancel-button" data-dismiss="modal">Cancel</button></a>
        <button type="button" class="btn btn-primary">Confirm</button>
    </div>
</body>
</html>
