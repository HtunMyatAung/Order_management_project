</div>
@section Scripts {
    <script>
        $('input[type=radio][name=registerAs]').change(function () {
            if (this.value === 'ShopOwner') {
                $('#shopOwnerFields').show();
            } else {
                $('#shopOwnerFields').hide();
            }
        });
    </script>
}
