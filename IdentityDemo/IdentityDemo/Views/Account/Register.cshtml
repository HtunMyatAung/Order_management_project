@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Register as:</label>
        <div class="form-check">
            <input type="radio" id="user" name="registerAs" value="user" class="form-check-input" checked>
            <label for="user" class="form-check-label">User</label>
        </div>
        <div class="form-check">
            <input type="radio" id="shopOwner" name="registerAs" value="shopOwner" class="form-check-input">
            <label for="shopOwner" class="form-check-label">Shop Owner</label>
        </div>
    </div>
    <div id="shopOwnerFields" style="display: none;">
        <div class="form-group">
            <label asp-for="ShopName">Shop Name</label>
            <input type="text" class="form-control" asp-for="ShopName" />
            <span asp-validation-for="ShopName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShopCategory">Shop Category</label>
            <input type="text" class="form-control" asp-for="ShopCategory" />
            <span asp-validation-for="ShopCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShopDescription">Shop Description</label>
            <textarea class="form-control" asp-for="ShopDescription"></textarea>
            <span asp-validation-for="ShopDescription" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
    </div>
</div>
@section Scripts {
    <script>
        $('input[type=radio][name=registerAs]').change(function () {
            if (this.value === 'shopOwner') {
                $('#shopOwnerFields').show();
            } else {
                $('#shopOwnerFields').hide();
            }
        });
    </script>
}