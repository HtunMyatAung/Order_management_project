@model IdentityDemo.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="~/css/download_css/5_2_3_bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/download_css/5_15_3_all.min.css" />
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #a2d5c6; /* Mint green background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            padding: 20px 30px; /* Adjust padding for a shorter height */
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2); /* Stronger shadow for modern look */
            width: 100%;
            max-width: 600px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .container:hover {
            transform: translateY(-5px); /* Slight lift on hover for modern effect */
        }

        .container h2 {
            font-size: 1.8em; /* Slightly smaller for modern look */
            margin-bottom: 15px;
        }

        .github-label {
            font-size: 1em; /* Smaller font for modern look */
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        .github-input {
            width: 100%; /* Full width for the input field */
            padding: 10px;
            font-size: 1em;
            border: 1px solid #cccaca;
            border-radius: 4px;
            background-color: #f9f9f9;
            transition: border-color 0.3s ease;
        }

        .github-input:focus {
            border-color: #4CAF50;
        }

        .github-btn {
            width: 40%;
            padding: 12px;
            margin-top: 15px; /* Adjust margin for spacing */
            font-size: 1em;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .github-btn:hover {
            background-color: #45a049;
        }

        .text-danger {
            margin-top: 2px;
            font-size: 14px;
            color: #dc3545;
        }
        .login-link{
            padding: 12px;
            margin-top: 15px;
            font-size: 1em;
            margin-right: 40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="text-center">Register</h2>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="github-label">User Name</label>
                    <input type="text" class="form-control github-input" asp-for="UserName" id="nameInput" />
                    <span asp-validation-for="UserName" class="text-danger" id="nameInputValidationMessage"></span>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label asp-for="Email" class="github-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger right-margin" id="emailInputValidationMessage"></span>
                    </div>
                    <input type="email" class="form-control github-input" asp-for="Email" id="emailInput" data-error-message="Sample@gmail.com" />
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-between">
                        <label asp-for="PhoneNumber" class="github-label">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger right-margin" id="phoneInputValidationMessage"></span>
                    </div>
                    <input type="text" class="form-control github-input" asp-for="PhoneNumber" pattern="[0-9]*" id="phoneInput" data-error-message="09-xxxxxxxxx" />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="github-label">Address</label>
                    <input type="text" class="form-control github-input" asp-for="Address" id="addressInput" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="github-label">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control github-input" asp-for="Password" id="passwordInput" data-error-message="At least 1 digit, non-alphanumeric, capital, small letter & 6 characters" />
                        <span class="input-group-text" id="togglePassword"><i class="fas fa-eye-slash"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger" id="passwordInputValidationMessage"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="github-label">Confirm Password</label>
                    
                        <div class="input-group">
                            <input type="password" class="form-control github-input" asp-for="ConfirmPassword" id="confirmPasswordInput" />
                            <span class="input-group-text" id="toggleConfirmPassword"><i class="fas fa-eye-slash"></i></span>
                        </div>
                   
                    <span asp-validation-for="ConfirmPassword" class="text-danger" id="confirmPasswordInputValidationMessage"></span>
                </div>               
                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("Login", "Account")" class="login-link">Login</a>
                    <button type="submit" class="btn btn-primary btn-block github-btn" id="submitButton">Register</button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/ValidForm.js"></script> <!-- Your existing JavaScript file -->
    <script>
        // JavaScript for toggling password visibility
        function togglePasswordVisibility(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }

        // Toggle visibility for the password field
        document.getElementById('togglePassword').addEventListener('click', function (e) {
            togglePasswordVisibility('passwordInput', 'togglePassword');
        });

        // Toggle visibility for the confirm password field
        document.getElementById('toggleConfirmPassword').addEventListener('click', function (e) {
            togglePasswordVisibility('confirmPasswordInput', 'toggleConfirmPassword');
        });
    </script>
    <script src="~/js/download_js/3_5_1_jquery.min.js"></script>
    <script src="~/js/download_js/4_5_3_bootstrap.min.js"></script>
</body>
</html>
