@model IdentityDemo.ViewModels.LoginViewModel
@{
    Layout = null;
}

    <title>Login Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #a2d5c6; /* Mint green background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;            
            margin: 0;
            /*max-width: 800px; /* Adjust the width as needed */
            /*width: 120%; /* Ensure full width within the viewport */
        }

        .login-container {
            
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 130%; /* Adjusted width */
            max-width: 500px; /* Added max-width */
            text-align: center;
            justify-content:center
        }
        a{
            color: #245016;
        }
            .login-container h2 {
                font-size: 2em;
                margin-bottom: 20px;
            }

            .login-container label {
                font-size: 1.2em;
                display: block;
                text-align: left;
                margin-bottom: 5px;
            }

        .login-container input[type="email"],
        .login-container input[type="password"],
        .login-container input[type="text"]{
            width: calc(100% - 20px); /* Adjusted width */
            padding: 12px;
            margin-bottom: 20px;
            font-size: 1em;
            border-radius: 4px;
            border: none;
            border-bottom: solid #cccaca;
            background-color: #f9f9f9;
        }

            .login-container input[type="checkbox"] {
                margin-bottom: 20px;
            }

            .login-container button {
                width: 100%;
                padding: 15px;
                margin-bottom: 20px;
                font-size: 1.2em;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 4px;
            }

                .login-container button:hover {
                    background-color: #45a049;
                }

            .login-container p {
                text-align: center;
                font-size: 1.2em;
            }

            .login-container a {
                font-size: 1.2em;
            }

        .show-password-row {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .show-password-row label {
                margin-left: 10px;
            }
    </style>

<body>

    <div class="login-container">
        <h2>Login</h2>
        <form asp-action="Login" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            <label asp-for="UserName">User Name:</label><br>
            <input asp-for="UserName" type="text" id="username" name="username"><br>
            <label asp-for="Password">Password:</label><br>
            <input asp-for="Password" type="password" id="password" name="Password">
            <div class="show-password-row">
                <input type="checkbox" id="show-password" name="show-password">
                <label for="show-password">Show Password</label>
            </div>
           

            <button type="submit">SIGN IN</button>
            <p><a href="#">Forgot Password?</a></p>
            <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a></p>
        </form>

    </div>



    <script>
        const passwordInput = document.getElementById('password');
        const showPasswordCheckbox = document.getElementById('show-password');

        showPasswordCheckbox.addEventListener('change', function () {
            if (showPasswordCheckbox.checked) {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
            // Adjust input width based on checkbox state
            //passwordInput.style.width = showPasswordCheckbox.checked ? 'calc(100% - 40px)' : 'calc(100% - 20px)';
        });
    </script>
    
    </body>
